@{
    ViewData["Title"] = "Rename";
}

<h1>Rename Person</h1>

<form onsubmit="postRename(event)" method="post" data-target="renamePerson" asp-controller="Persons" asp-action="PersonRenamePartial">

    <label asp-for="Name"></label>
    <input asp-for="Name" /><span asp-validation-for="Name"></span>
    <br />
    <label asp-for="Country"></label>
    <input asp-for="Country" /><span asp-validation-for="Country"></span>
    <br />
    <input asp-for="@Person.Id" />
    <input type="submit" value="Rename Person" />

</form>