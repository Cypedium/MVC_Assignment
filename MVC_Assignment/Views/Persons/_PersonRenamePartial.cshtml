@{
    ViewData["Title"] = "Create";
}

<h1>Create Person</h1>

<form onsubmit="postRename(event)" method="post" data-target="personTable" asp-controller="Persons" asp-action="PersonRenamePartial">

    <label asp-for="Name"></label>
    <input asp-for="Name" /><span asp-validation-for="Name"></span>

    <label asp-for="Country"></label>
    <input asp-for="Country" /><span asp-validation-for="Country"></span>

    <input type="submit" value="Rename Person" />

</form>